import java.util.Scanner;

public class ContarPosNeg {

	public static void main(String[] args) {
		//PROGRAMA QUE LEA 15 NUMEROS POR TECLADO Y AL FINAL NOS DIGA CUANTOS ERAN
		//POSITIVOS, CUANTOS NEGATIVOS Y CUANTOS VALIAN


		Scanner se;
		se=new Scanner(System.in);

		//VARIABLES
		int num = 0, cont = 0, contpos=0, contneg=0, contCero=0;

		while (cont<15) {
			cont++;
			System.out.println("Introduzca el numero:");
			num=se.nextInt();
			if (num>0) {
				System.out.println(contpos++);
			}
			if (num<0) {
				System.out.println(contneg++);
			}
			if (num==0) {
				System.out.println(contCero++);
			}


		} 

		System.out.println("RESULTADOS: POTISIVOS;"+ contpos +  ", NEGATIVOS;"+ contneg+", CEROS:"+ contCero);
		System.out.println("CONTADOR:"+ cont);





	}

}
